<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/applogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/appicon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applogo"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MedNetwork"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="10sp"/>


        <EditText
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:id="@+id/editphone"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Phone"
            android:drawableLeft="@drawable/ic_phone_white_18dp"
            android:inputType="number"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:maxLength="10"
            android:drawablePadding="15dp"
            android:textColorHint="@color/hintcolor"
            android:backgroundTint="@color/barcolor"/>

         <EditText
             android:id="@+id/editpassword"
             android:layout_width="320dp"
             android:layout_gravity="center"
             android:layout_height="50dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="10dp"
             android:hint="Password"
             android:textColor="@color/white"
             android:textSize="18dp"
             android:textColorHint="@color/hintcolor"
             android:backgroundTint="@color/barcolor"
             android:drawablePadding="15dp"
             android:drawableLeft="@drawable/ic_lock_white_18dp"
             android:inputType="textPassword"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_gravity="center_horizontal"
            android:onClick="sign_in"
            android:background="@drawable/edittextshape"/>

        <TextView
            android:id="@+id/forgotpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:padding="10dp"
            android:textSize="15dp"
            android:layout_gravity="right"
            android:clickable="true"
            android:textColor="@color/white"
            android:autoLink="web"/>

        <TextView
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:linksClickable="true"
            android:onClick="signup_page"
            android:paddingTop="14dp"
            android:text="No Account? Create One"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:autoLink="web"/>

    </LinearLayout>

</RelativeLayout>
